package q.thread.chat;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

public class TCPServer {
	public static void main(String[] args) {
		
		int port = 3000;
		
		try {
			ServerSocket ssoc = new ServerSocket(port);
			System.out.println("서버 연결준비 완료...");
			
			Socket soc = ssoc.accept();
			System.out.println(soc.getInetAddress().getHostAddress() + "에서 연결함...");
			
			// 클라이언트로부터 메세지를 받는 쓰레드
			ServerReceive  receive = new ServerReceive(soc);
			
			// 클라이언트로부터 메세지를 보내는 쓰레드
			
			
			while(true) {
				
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}
}
