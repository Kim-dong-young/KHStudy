package p.network;

import java.io.BufferedReader;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.util.Scanner;

public class TCPServer {
	/*
	 * TCP
	 * - 서버, 클라이언트 간에 1:1 소켓 통신
	 * - 데이터를 교환하기에 앞서 서버, 클라이언트 연결이 되어야 한다.
	 *   (서버가 먼저 실행되에 클라이언트의 요청을 기다린다.)
	 * - 신뢰성있는 데이터 전달 가능
	 * 
	 * socket
	 * - 프로세스간의 통신을 담당
	 * - input/outputStream을 가지고 있다.(해당 스트림을 이용해서 입출력이 가능하다)
	 * 
	 * ServerSocket
	 * - 포트와 연결되어 외부의 연결요청을 기다림 -> 요청이 들어오면 처리해준다.
	 * 	 수락 -> 통신할 수 있는 socket 생성
	 */
	
	//서버용 프로그램
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		BufferedReader br = null;
		PrintWriter pw = null;
		
		// 1) 포트번호 지정(서버측에서 몇번 포트로 통로를 열 것인가?)
		int port = 3000;
		
		ServerSocket server = new ServerSocket();
	}
}
