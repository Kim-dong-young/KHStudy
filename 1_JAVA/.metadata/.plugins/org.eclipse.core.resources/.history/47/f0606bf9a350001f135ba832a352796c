package _coding_test.programmers.level2;

public class TestCode_010 {
    public static void main(String[] args) {
        int n = 6;

        // 2D array creation
        int[][] arr = new int[n][];
        for (int i = 1; i <= n; i++) {
            arr[i - 1] = new int[i];
        }

        int num = 1;
        int x = -1, y = 0;
        int direction = 0; // 0: down, 1: right, 2: up-left
        int limit = n;

        while (num <= n * (n + 1) / 2) {
            switch (direction) {
                case 0: // Move down
                    for (int i = 0; i < limit; i++) {
                        x++;
                        arr[x][y] = num++;
                    }
                    direction = 1;
                    limit--;
                    break;
                case 1: // Move right
                    for (int i = 0; i < limit; i++) {
                        y++;
                        arr[x][y] = num++;
                    }
                    direction = 2;
                    break;
                case 2: // Move up-left
                    for (int i = 0; i < limit; i++) {
                        x--;
                        y--;
                        arr[x][y] = num++;
                    }
                    direction = 0;
                    limit--;
                    break;
            }
        }

        // Print the result
        int[] answer = new int[num - 1];
        int index = 0;
        for (int[] row : arr) {
            for (int value : row) {
                answer[index++] = value;
                System.out.printf("%3d", value);
            }
            System.out.println();
        }
    }
}
