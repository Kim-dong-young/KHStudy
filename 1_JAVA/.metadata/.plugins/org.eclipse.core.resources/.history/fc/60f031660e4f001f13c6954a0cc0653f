package _miniproject.controller;

import java.util.HashMap;

import _miniproject.vo.Item;

public class ItemController {
	private static ItemController ic;
	private StockController sc = StockController.getInstance();
	private HashMap<Integer, Item> itemList;
	
	private ItemController() {
		super();
		this.itemList = new HashMap<>();
		
		itemList.put(1, new Item("오늘의운세",500));
		itemList.put(2, new Item("주식가격예측",10000));
	}
	
	public static ItemController getInstance() {
		if(ic == null) {
			ic = new ItemController();
		}
		return ic;
	}
	
	public Item getItem(int itemNum) {
		if(itemList.containsKey(itemNum)) {
			return itemList.get(itemNum);
		}
		return null;
	}
}
