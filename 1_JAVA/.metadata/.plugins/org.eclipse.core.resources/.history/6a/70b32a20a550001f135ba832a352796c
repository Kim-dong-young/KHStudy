package _coding_test.programmers.level2;

public class TestCode_010 {
    public static void main(String[] args) {
        int n = 20;

        int[][] arr = new int[n][];
        for (int i = 0; i < n; i++) {
            arr[i] = new int[i + 1];
        }

        int num = 1;
        int x = -1, y = 0;
        int direction = 0; // 0: down, 1: right, 2: up-left

        for (int i = n; i > 0; i--) {
            for (int j = 0; j < i; j++) {
                switch (direction) {
                    case 0: // Move down
                        x++;
                        break;
                    case 1: // Move right
                        y++;
                        break;
                    case 2: // Move up-left
                        x--;
                        y--;
                        break;
                }
                arr[x][y] = num++;
            }
            direction = (direction + 1) % 3;
        }

        // Flatten the array and print
        int[] answer = new int[num - 1];
        int index = 0;
        for (int[] row : arr) {
            for (int value : row) {
                answer[index++] = value;
                System.out.printf("%4d", value);
            }
            System.out.println();
        }
    }
}
