package test240729.object1;

import java.util.ArrayList;
import java.util.Collections;
import java.util.HashSet;
import java.util.TreeSet;

public class LotteryController {
	private HashSet lottery = new HashSet();
	private HashSet win = new HashSet();
	
	public boolean insertObject(Lottery l) {
		if(!lottery.contains(l)) {
			lottery.add(l);
			return true;
		}
		else {
			return false;
		}
	}
	
	public boolean deleteObject(Lottery l) {
		if(lottery.contains(l)) {
			lottery.remove(l);
			if(win.contains(l)) {
				win.remove(l);
			}
			return true;
		}
		return false;
	}
	
	public HashSet winObject() {
		ArrayList arrList = new ArrayList();
		arrList.addAll(lottery);
		
		// TODO
		// 만일 당첨자 목록에 삭제된 추첨 대상자가 있다면
		// 기존에 당첨된 사람은 제외하고 삭제된 사람의 자리만 새로운 추첨자로 채움
		if(arrList.size() >= 4) {
			while(win.size() < 4) {
				win.add(arrList.get( (int)(Math.random() * arrList.size())) );
			}
		}
		return win;
	}
	
	public TreeSet sortedWinObject() {
		Collections.sort(win, new SortedLottery());
		return null;
	}
	
	public boolean searchWinner(Lottery l) {
		if(win.contains(l)) return true;
		else return false;
	}
}
